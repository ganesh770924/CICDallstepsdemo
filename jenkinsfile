@Library('ganesh-shared-library')_
pipeline{
    agent any
    stages{
        stage('checkout'){
         
            steps{
                 dir('mydir'){
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ganesh770924/CICDallstepsdemo.git']]])
            }
        }
        }
        stage("checkout project"){
          steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/HouariZegai/Calculator.git']]])
            }
        }
        stage('mavenbuild'){
            tools{
                maven 'maven3'
                }
            steps{
                     sh 'mvn clean package'
                 
            }
        }
        
        stage('dockerimagebuild'){
          steps{
               sh 'docker build -f ../CICDFlow_pipeline/mydir/Dockerfile -t tomcat:${env.BUILD_NUMBER} .'
          
              }
        }
        stage('dockerruncontainer'){
            steps{
            sh "docker rm -f tomcatwebapp || true "
             
             sh "docker run -it -d --name tomcatwebapp -p 9090:8080 tomcat:${env.BUILD_NUMBER}"

              }
             }
           }
          }
        
        
        
        
        
            
     
