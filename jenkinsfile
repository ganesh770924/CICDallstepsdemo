@Library('ganesh-shared-library')_
pipeline{
    agent any
    stages{
        stage('checkout'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [],
                userRemoteConfigs: [[url: 'https://github.com/buildpacks/sample-java-app.git'], [url: 'https://github.com/ganesh770924/CICDallstepsdemo.git']]])
            }
        }
        stage("Read"){
          steps{
                readFile 'README.md'
            }
        }
        stage('mavenbuild'){
            tools{
                maven 'maven3'
                }
            steps{
                     sh 'mvn clean package'
                 
            }
        }
        
        stage('dockerimagebuild'){
          steps{
               sh 'docker build -f ../Dockerfile'
          
              }
        }
        stage('dockerruncontainer'){
            steps{
             sh "docker run -it -d --name tomcatwebapp -p 9090:8080 tomcat:latest"

              }
             }
           }
          }
        
        
        
        
        
            
     
